{% block styles %}
  {{ "guide.css" | asset_url | stylesheet_tag }}
{% endblock %}

{% block header %}
  {% include "guide/header" %}
{% endblock %}

{% block content %}
<header class="row container">
  <h1>Forms</h1>
  <p class="lead">Forms are essential for user interaction, but often get forgotten about in the design phase. Make 'em consistent here, first.</p>
</header>
<form action="#" method="post">
  <section class="row container">
    <fieldset class="split-content">
      <h2>Text Inputs</h2>
      <hr>
      <div class="field">
        <label for="text">Text input</label>
        <input type="text" name="text" id="text" value="" placeholder="Text" class="text-input"  />
      </div>
      <div class="field">
        <label for="email">Email input</label>
        <input type="email" name="email" id="email" value="" placeholder="name@example.com" class="text-input"  />
      </div>
      <div class="field">
        <label for="url">URL input</label>
        <input type="url" name="url" id="url" value="" placeholder="http://example.com" class="text-input"  />
      </div>
      <div class="field">
        <label for="tel">Telephone input</label>
        <input type="tel" name="tel" id="tel" value="" placeholder="555-555-5555" class="text-input"  />
      </div>
      <div class="field">
        <label for="search">Search input</label>
        <input type="search" name="search" id="search" value="" placeholder="Search" class="search-input"  />
      </div>
      <div class="field">
        <label for="textarea">Textarea</label>
        <textarea name="textarea" id="textarea"></textarea>
      </div>

      <div class="field">
        <label for="error">Invalid input</label>
        <input type="text" name="error" id="error" value="Bad input" placeholder="" class="error text-input"  />
        <label class="error label--error">Error message for invalid field.</label>
      </div>
    </fieldset>
    <fieldset class="split-content">
      <h2>HTML5 Special fields</h2>
      <hr>
      <div class="field">
        <label for="number">Number input</label>
        <input type="number" name="number" id="number" value="" placeholder="" class="text-input"  />
      </div>
      <div class="field">
        <label for="datetime">Datetime input</label>
        <input type="datetime" name="datetime" id="datetime" value="" class="text-input" />
      </div>
      <div class="field">
        <label for="datetime-local">Datetime-local input</label>
        <input type="datetime-local" name="datetime-local" id="datetime-local" value="" class="text-input" />
      </div>
      <div class="field">
        <label for="month">Month input</label>
        <input type="month" name="month" value="" id="month" class="text-input" />
      </div>
      <div class="field">
        <label for="week">Week input</label>
        <input type="week" name="week" value="" id="week" class="text-input" />
      </div>
      <div class="field">
        <label for="time">Time input</label>
        <input type="time" name="time" value="" id="time" class="text-input" />
      </div>
      <div class="field">
        <label for="range">Range input</label>
        <input type="range" name="range" id="range" value="0" />
      </div>
      <div class="field">
        <label for="color">Color input</label>
        <input type="color" name="color" id="color" value="" />
      </div>



    </fieldset>

  </section>
  <section class="row container">
      <fieldset class="split-content">
        <h2>Checks &amp; Radios</h2>
        <hr>
        <div class="field">
          <h3>Checkboxes</h3>
          <ul class="check-list">
            <li><label><input type="checkbox" name="checkbox" value="checkbox" /> Checkbox option</label></li>
            <li><label><input type="checkbox" name="checkbox" value="checkbox" /> Checkbox option</label></li>
            <li><label><input type="checkbox" name="checkbox" value="checkbox" /> Checkbox option</label></li>
            <li><label><input type="checkbox" name="checkbox" value="checkbox" /> Checkbox option</label></li>
            <li><label><input type="checkbox" name="checkbox" value="checkbox" /> Checkbox option</label></li>
            <li><label><input type="checkbox" name="checkbox" value="checkbox" /> Checkbox option</label></li>
            <li><label><input type="checkbox" name="checkbox" value="checkbox" /> Checkbox option</label></li>
          </ul>
        </div>
        <div class="field">
          <h3>Radios</h3>
          <ul class="check-list">
            <li><label><input type="radio" name="radio" value="radio" /> Radio option</label></li>
            <li><label><input type="radio" name="radio" value="radio" /> Radio option</label></li>
            <li><label><input type="radio" name="radio" value="radio" /> Radio option</label></li>
            <li><label><input type="radio" name="radio" value="radio" /> Radio option</label></li>
            <li><label><input type="radio" name="radio" value="radio" /> Radio option</label></li>
            <li><label><input type="radio" name="radio" value="radio" /> Radio option</label></li>
            <li><label><input type="radio" name="radio" value="radio" /> Radio option</label></li>
          </ul>
        </div>
      </fieldset>
      <fieldset class="split-content">
        <h2>Selects</h2>
        <hr>
        <div class="field">
          <label for="select">Select Dropdown</label>
          <select name="select" id="select" class="ss-navigatedown">
            <option value="selection">Select option</option>
            <option value="selection">Select option</option>
            <option value="selection">Select option</option>
            <option value="selection">Select option</option>
            <option value="selection">Select option</option>
          </select>
        </div>
        <div class="field">
          <label for="multi-select">Multi-select</label>
          <select name="multi-select" id="multi-select" multiple>
            <option value="selection">Select option</option>
            <option value="selection">Select option</option>
            <option value="selection">Select option</option>
            <option value="selection">Select option</option>
            <option value="selection">Select option</option>
          </select>
        </div>
      </fieldset>
      <fieldset class="split-content">
        <h2>File uploads</h2>
        <hr>
        <div class="field">
          <label for="file">File upload</label>
          <input type="file" name="file" id="file" />
        </div>
      </fieldset>
  </section>
  <section class="row container">
      <fieldset class="split-content">
        <h2>Special fields</h2>
        <hr>
        <h3>Checkbox option buttons</h3>
        <div class="field option-buttons js-options">
          <label for="cb1"><input type="checkbox" name="check-button" value="1" id="cb1" />Item 1</label>
          <label for="cb2"><input type="checkbox" name="check-button" value="2" id="cb2" />Item 2</label>
          <label for="cb3"><input type="checkbox" name="check-button" value="3" id="cb3" />Item 3</label>
        </div>

        <h4>Markup example:</h4>
        <pre class="language-markup line-numbers"><code>    &lt;div class="field option-buttons js-options"&gt;
      &lt;label for="cb1"&gt;&lt;input type="checkbox" name="check-button" value="1" id="cb1" /&gt;Item 1&lt;/label&gt;
      &lt;label for="cb2"&gt;&lt;input type="checkbox" name="check-button" value="2" id="cb2" /&gt;Item 2&lt;/label&gt;
      &lt;label for="cb3"&gt;&lt;input type="checkbox" name="check-button" value="3" id="cb3" /&gt;Item 3&lt;/label&gt;
    &lt;/div&gt;</code></pre>
        <h3>Radio option buttons</h3>
        <div class="field option-buttons js-options">
          <label for="rb1"><input type="radio" name="radio-button" value="1" id="rb1" />Item 1</label>
          <label for="rb2"><input type="radio" name="radio-button" value="2" id="rb2" />Item 2</label>
          <label for="rb3"><input type="radio" name="radio-button" value="3" id="rb3" />Item 3</label>
        </div>


        <h4>Markup example:</h4>
        <pre class="language-markup line-numbers"><code>    &lt;div class="field option-buttons js-options"&gt;
      &lt;label for="rb1"&gt;&lt;input type="radio" name="radio-button" value="1" id="rb1" /&gt;Item 1&lt;/label&gt;
      &lt;label for="rb2"&gt;&lt;input type="radio" name="radio-button" value="2" id="rb2" /&gt;Item 2&lt;/label&gt;
      &lt;label for="rb3"&gt;&lt;input type="radio" name="radio-button" value="3" id="rb3" /&gt;Item 3&lt;/label&gt;
    &lt;/div&gt;</code></pre>

          <h3>Checkbox pill buttons</h3>
        <div class="field pill-buttons js-options">
          <label for="cp1"><input type="checkbox" name="check-pill" value="1" id="cp1" />Item 1</label>
          <label for="cp2"><input type="checkbox" name="check-pill" value="2" id="cp2" />Item 2</label>
          <label for="cp3"><input type="checkbox" name="check-pill" value="3" id="cp3" />Item 3</label>
        </div>

        <h4>Markup example:</h4>
        <pre class="language-markup line-numbers"><code>    &lt;div class="field pill-buttons js-options"&gt;
      &lt;label for="cp1"&gt;&lt;input type="checkbox" name="check-button" value="1" id="cp1" /&gt;Item 1&lt;/label&gt;
      &lt;label for="cp2"&gt;&lt;input type="checkbox" name="check-button" value="2" id="cp2" /&gt;Item 2&lt;/label&gt;
      &lt;label for="cp3"&gt;&lt;input type="checkbox" name="check-button" value="3" id="cp3" /&gt;Item 3&lt;/label&gt;
    &lt;/div&gt;</code></pre>

        <h3>Radio pill buttons</h3>
        <div class="field pill-buttons js-options">
          <label for="rp1"><input type="radio" name="radio-pill" value="1" id="rp1" />Item 1</label>
          <label for="rp2"><input type="radio" name="radio-pill" value="2" id="rp2" />Item 2</label>
          <label for="rp3"><input type="radio" name="radio-pill" value="3" id="rp3" />Item 3</label>
        </div>

        <h4>Markup example:</h4>
        <pre class="language-markup line-numbers"><code>    &lt;div class="field pill-buttons js-options"&gt;
      &lt;label for="rp1"&gt;&lt;input type="radio" name="radio-button" value="1" id="rp1" /&gt;Item 1&lt;/label&gt;
      &lt;label for="rp2"&gt;&lt;input type="radio" name="radio-button" value="2" id="rp2" /&gt;Item 2&lt;/label&gt;
      &lt;label for="rp3"&gt;&lt;input type="radio" name="radio-button" value="3" id="rp3" /&gt;Item 3&lt;/label&gt;
    &lt;/div&gt;</code></pre>


        <h3>Switch</h3>
        <div class="field switch">
          <input id="x" name="switch-x" type="radio" checked>
          <label for="x" onclick="">Off</label>
          <input id="y" name="switch-x" type="radio">
          <label for="y" onclick="">On</label>
          <span></span>
        </div>

        <h4>Markup example:</h4>
        <pre class="language-markup line-numbers"><code>    &lt;div class="field switch"&gt;
      &lt;input id="x" name="switch-x" type="radio" checked /&gt;
      &lt;label for="x"&gt;Off&lt;/label&gt;
      &lt;input id="y" name="switch-x" type="radio" /&gt;
      &lt;label for="y"&gt;On&lt;/label&gt;
    &lt;/div&gt;</code></pre>

      </fieldset>
      <fieldset>
        <h2>Buttons</h2>
        <hr>
        <div class="field">
          <button type="submit">Button input</button>
        </div>
        <div class="field">
          <input type="submit" value="Submit input" />
        </div>
        <div class="field">
          <a href="" class="button">Button link</a>
        </div>
        <div class="field">
          <a href="" class="button button--red">Red button</a>
        </div>
        <div class="field">
          <a href="" class="button button--blue">Blue button</a>
        </div>
        <div class="field">
          <a href="" class="button button--disabled">Disabled button</a>
        </div>
        <div class="field">
          <a href="" class="button button--small">Small button link</a>
        </div>
        <div class="field">
          <a href="" class="button button--large">Large button link</a>
        </div>
        <div class="field button-group">
          <a href="" class="button">Button group</a>
          <a href="" class="button">Button group</a>
          <a href="" class="button">Button group</a>
        </div>
      </fieldset>
  </section>
</form>
{% endblock %}